<div class="d-flex align-items-center justify-content-between">
    <h1>Twitter Accounts</h1>

    <%= link_to "Connect a Twitter account", "/auth/twitter", method: :post, class: "btn btn-primary" %>
</div>
<% @twitter_accounts.each do |twitter_account| %>
<div class="row">
    <div class="d-flex align-items-center justify-content-between mb-4 col-4">
        <div class="mt-4">
            <%= image_tag twitter_account.image, class: "rounded-circle" %>
            <%= link_to "@#{twitter_account.username}", "http://twitter.com/#{twitter_account.username}", target: :_blank %>
        </div>

        <%= button_to "Disconnect", twitter_account, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" %>
    </div>
</div>
<% end %>